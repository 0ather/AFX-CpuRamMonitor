<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ExtensionBundleId="com.cpurammonitor.ext" ExtensionBundleName="CPU-RAM Monitor" ExtensionBundleVersion="1.1.1" Version="5.0">
	<ExtensionList>
		<Extension Id="com.cpurammonitor.ext" Version="1.1.1" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
            <!-- AfterEffects -->
            <Host Name="AEFT" Version="[13.0,13.9]" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="5.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="com.cpurammonitor.ext">
			<DispatchInfo>
				<Resources>
					<MainPath>./index.html</MainPath>
					<CEFCommandLine><Parameter>--enable-nodejs</Parameter></CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>CPU-RAM Monitor</Menu>
					<Geometry>
						<Size>
							<Height>300</Height>
							<Width>300</Width>
						</Size>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>